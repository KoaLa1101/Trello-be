<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <a class="btn btn-outline-info" href="/cards">Cards</a>
      <a class="btn btn-outline-danger" href="/logout">Logout</a>
    </section>
  </aside>
  <div class="col-md-8">
      <h3>Cards (<%= @user.cards.count %>)</h3>
      <ol class="cards-list">
        <%= render @cards %>
      </ol>
  </div>
</div>